<%= flash[:notice] %>
<h1 class= "header">Books</h1>

<table class= "book-list">
 <thead>
  <tr class= "book-head">
   <th>本のタイトル</th>
   <th>感想</th>
   <th colspan="3"></th>
 <tr>
</thead>

 <tbody>
   <% @books.each do |book| %>
  <tr class= "book-body">
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to"Show", book_path(book.id) %></td>
   <td><%= link_to"Edit",  edit_book_path(book.id) %></td>
   <td><%= link_to"Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" }  %>
  </td>
  </tr>
  <% end %>
 </tbody>
</table>


<h2 class= "header">New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class= "text">
   本のタイトル<br>
   <%= f.text_field :title %>
  </div>
  <div class= "text">
   感想<br>
   <%= f.text_area :body %>
  </div>
  <div class= "button">
   <%= f.submit %>
  </div>

<% end %>

